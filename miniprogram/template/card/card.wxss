/* 名片样式 */

.card{
  margin: 0 auto;
  padding: 60rpx 0 60rpx 0;
  background: #fff;
  border-radius: 20rpx;
  border: 1rpx solid rgba(104, 102, 102, 0.1);
  box-shadow: 0rpx 0rpx 12rpx rgba(104, 102, 102, 0.2);
}
.card .name-box, .info-box{
  position: relative;
  margin: 0 60rpx 0 60rpx;
}
.card text{
  display: block;
}
.card .name-box .name{
  font-size: 42rpx;
  font-weight: 400;
}
.card .name-box .position{
  font-size: 32rpx;
}
.card .name-box image.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.card .info-box{
  margin-top: 20rpx;
}
.card .info-box text{
  font-size: 30rpx;
  color: #999;
  padding-top: 8rpx;
}
