/**index.wxss**/

page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container{
  width: 100%;
}
.container .wrap{
  width: 100%ï¼›
}

.container .top{
  width: 100%;
  height: 700rpx;
  background: #fff;
  background-size: 100% 700rpx;
  position: relative;
}
.container .top image{
  width: 100%;
  height: 100%;
}

.container .top .card-wrap{
  width: 100%;
  position: absolute;
  bottom: -40rpx;
  left: 0;
}
.container .top .card-wrap .card-box{
  width: 90%;
  margin: 0 auto;
}

.container .bottom{
  width: 100%;
  margin-top: 40rpx;
}
.container .bottom .button-box{
  margin-top: 60rpx;
  text-align: center;
}
.container .bottom .button-box button{
  width: 34%;
  font-size: 34rpx;
  border: 1rpx solid #1AAD19;
}
.container .bottom .button-box button:last-child{
  color: #1AAD19;
  margin-left: 40rpx;
  background: #fff;
}
.container .bottom .stats-box{
  width: 90%;
  margin: 0 auto;
  font-size: 28rpx;
  color: #666;
}
.container .bottom .stats-box .stats-item{
  width: 30%;
  padding-top: 40rpx;
  display: inline-block;
  margin-right: 5%;
}

.container .bottom .stats-box .stats-item:last-child{
  margin-right: 0;
}
.container .bottom .stats-box text{
  display: block;
  text-align: center;
}
.container .bottom .stats-box text.iconfont{
  font-size: 40rpx;
  padding-bottom: 10rpx;
}
.container .bottom .stats-box text.liulan{
  color: #538DBB;
}
.container .bottom .stats-box text.tuijian{
  color: #FF0000;
}
.container .bottom .stats-box text.shoucang{
  color: #FF6600;
}
