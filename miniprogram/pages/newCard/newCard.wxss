/* miniprogram/pages/newCard/newCard.wxss */
.container{
  background: #fafafa;
  padding-bottom: 160rpx;
}
.type-box{
  width: 100%;
}
.type-box .rendering{
  width: 90%;
  padding: 20rpx 0;
  margin: 0 auto;
}
.type-box .choices-wrap{
  padding: 0 40rpx;
}
.type-box .choices-wrap text.title{
  color: #555;
  font-size: 30rpx; 
  display: block;
  margin: 20rpx 0;
}
.type-box .choices{
  width: 90%;
  margin: 0 auto;
}
.type-box .choices .pattern{
  height: 80rpx;
  display: inline-block;
  margin-right: 20rpx; 
  border-radius: 8rpx;
  border: 1rpx solid rgba(104, 102, 102, 0.1);
  box-shadow: 0rpx 0rpx 6rpx rgba(104, 102, 102, 0.2);
}
.type-box .choices .pattern:last-child{
  margin-right: 0; 
}

.type-box .choices .pattern.selected{
  border: 2rpx solid #1AAD19;
}

/* 样式1 */
.type-box .choices .pattern1{
  width: 120rpx;
  position: relative;
}
.type-box .choices .pattern1 text{
  display: block;
  background: #E4E6E3;
  height: 8rpx;
  width: 40rpx;
  margin: 6rpx 0 0 12rpx;
}
.type-box .choices .pattern1 text.name{
  width: 20rpx;
  height: 9rpx;
  background: #999;
  margin-top: 12rpx;
}
.type-box .choices .pattern1 text.position{
  width: 30rpx;
  margin-bottom: 14rpx;
}
.type-box .choices .pattern1 text.addr{
  width: 70rpx;
}
.type-box .choices .pattern1 text.avatar{
  width: 30rpx;
  height: 30rpx;
  border-radius: 6rpx;
  position: absolute;
  right: 12rpx;
  top: 5rpx;
}

.type-box .choices .pattern2{
  width: 120rpx;
  position: relative
}
.type-box .choices .pattern2 .company{
  width: 40rpx;
  height: 8rpx;
  display: block;
  background: #999;
  margin: 14rpx 0 0 12rpx;
}
.type-box .choices .pattern2 .name{
  width: 100%;
  text-align: center;
  position: absolute;
  top: 0rpx;
  left: 0;
}
.type-box .choices .pattern2 .name text{
  display: inline-block;
  width: 30rpx;
  height: 8rpx;
  background: #999;
}

.type-box .choices .pattern2 .info{
  width: 100%;
  position: absolute;
  bottom: 46rpx;
  left: 12rpx;
}
.type-box .choices .pattern2 .info .item{
  height: 8rpx;
  margin-top: 4rpx;
}
.type-box .choices .pattern2 .info .item text{
  width: 30%;
  height: 8rpx;
  margin-right: 18%;
  display: inline-block;
  background: #E4E6E3;
}
/* 样式3 */
.type-box .choices .pattern3{
  width: 60rpx;
}
.type-box .choices .pattern3 .img{
  height: 48rpx;
  background: #E4E6E3;
  position: relative;
  margin-top: 2rpx; 
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}
.type-box .choices .pattern3 .img text{
  width: 20rpx;
  height: 20rpx;
  background: #ccc;
  border-radius: 6rpx;
  position: absolute;
  right: 8rpx;
  bottom: -6rpx;
}
.type-box .choices .pattern3 .info{
  height: 32rpx;
  line-height: 32rpx;
}
.type-box .choices .pattern3 .info text{
  display: block;
  background: #E4E6E3;
  height: 8rpx;
  width: 20rpx;
  margin: 10rpx 0 4rpx 10rpx ;
}
.type-box .choices .pattern3 .info text:last-child{
  width: 40rpx;
  margin: 0 0 0 10rpx;
}
.card-form input{
  width: 90%;
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  text-indent: 30rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(104, 102, 102, 0.1);
  box-shadow: 0rpx 0rpx 6rpx rgba(104, 102, 102, 0.1);
}
.card-form .img-box{
  width: 90%;
  margin: 0 auto;
}
.card-form .img-box button{
  background: #fff;
  margin-right: 16rpx;
  color: #999;
  border: 1rpx solid #ccc;
}
.card-form .img-box button:last-child{
  margin-right: 0;
}
.card-form switch{
  margin-left: 5%;
}
.card-form .button-box{
  width: 90%;
  margin: 30rpx auto;
  padding-top: 4px; 
  text-align: center;
}
.card-form .button-box button{
  width: 48%;
  line-height: 78rpx;
  font-size: 34rpx;
}
.card-form .button-box button:first-child{
  margin-right: 4%;
}