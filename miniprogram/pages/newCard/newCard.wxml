<!--miniprogram/pages/newCard/newCard.wxml-->
<import src="/template/card/card.wxml" />
<import src="/template/card2/card2.wxml" />
<import src="/template/card3/card3.wxml" />

<view class="container">
  <view class='type-box'>
    <view class='rendering'>
      <view class='item' wx:if="{{currentPattern == 'pattern1'}}">
        <template is="card" data="{{...defaultCard}}" />
      </view>
      <view class='item' wx:if="{{currentPattern == 'pattern2'}}">
        <template is="card2" data="{{...defaultCard}}" />
      </view>
      <view class='item' wx:if="{{currentPattern == 'pattern3'}}">
        <template is="card3" data="{{...defaultCard}}" />
      </view>
    </view>
    <view class='choices-wrap'>
      <text class='title'>样式选择</text>
      <view class='choices'>
        <!-- 样式1选项 -->
        <view class="pattern pattern1 {{currentPattern == 'pattern1'?'selected':''}}" bindtap='onChoosePattern' data-pattern="pattern1">
          <text class='name'></text>
          <text class='position'></text>
          <text class='item'></text>
          <text class='item'></text>
          <text class='addr'></text>
          <text class='avatar'></text>
        </view>

        <!-- 样式2选项 -->
        <view class="pattern pattern2 {{currentPattern == 'pattern2'?'selected':''}}" bindtap='onChoosePattern' data-pattern="pattern2">
          <text class='company'></text>
          <view class='name'><text></text></view>
          <view class='info'>
            <view class='item'>
              <text></text>
              <text></text>
            </view>
            <view class='item'>
              <text></text>
              <text></text>
            </view>
          </view>
        </view>

        <!-- 样式3选项 -->
        <view class="pattern pattern3 {{currentPattern == 'pattern3'?'selected':''}}" bindtap='onChoosePattern' data-pattern="pattern3">
          <view class='img'>
            <text></text>
          </view>
          <view class='info'>
            <text></text>
            <text></text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
